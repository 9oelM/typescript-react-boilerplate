{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "main": "dist/bundle.js",
  "repository": "https://github.com/9oelM/typescript-boilerplate.git",
  "author": "Joel M <hj923@hotmail.com>",
  "scripts": {
    "start": "webpack && node dist/bundle.js",
    "watch": "run-p webpack:watch forever",
    "test": "jest",
    "lint": "npm run tslint && npm run prettier",
    "lint:config": "eslint --fix ./*.js && prettier --write ./*.js",
    "prettier": "prettier --write 'src/**/*{.ts,.tsx}'",
    "tslint": "tslint --fix -c ./tslint.json 'src/**/*{.ts,.tsx}'",
    "webpack:watch": "webpack --watch",
    "forever": "forever --watch dist/bundle.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "forever": "^0.15.3",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-loader": "^3.5.4",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  }
}
